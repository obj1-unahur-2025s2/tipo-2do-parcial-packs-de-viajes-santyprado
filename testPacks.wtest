describe "Test de los packs provinciales" {
    const guiaJuan = new Guia(cantidadViajes = 21,estaMotivado = true,aniosExperiencia = 5,rol = "Guia")
    const asistentePedro = new AsistenteLogistico(cantidadViajes = 21,estaMotivado = true,aniosExperiencia = 2,rol = "AsistenteLogistico")
    const acompanianteLucas = new Acompaniante(cantidadViajes = 21,estaMotivado = true,aniosExperiencia = 1,rol = "Acompaniante")
    const packAUshuaia = new PackProvincial ( provinciaDestino="Tierra del fuego",cantidadCiudadesAVisitar=6,duracionDias=21,precioBase=500000,coordinador="coordi1")
    const packMisiones = new PackProvincial(duracionDias = 11,cantidadCiudadesAVisitar=5,precioBase= 250000,coordinador=guiaJuan,provinciaDestino = "Misiones")
    const beneficio1 = new Beneficio(tipo="SalaVip",costo = 50000,estaVigente=true)
    const beneficio2 = new Beneficio(tipo="Translado",costo = 50000,estaVigente=true)
    const beneficio3 = new Beneficio(tipo="Translado",costo = 50000,estaVigente=true)
    const beneficio4 = new Beneficio(tipo="Translado",costo = 50000,estaVigente=false)
    const beneficio5 = new Beneficio(tipo="Translado",costo = 50000,estaVigente=false)
    const beneficio6 = new Beneficio(tipo="Translado",costo = 50000,estaVigente=false)
  test "El precio final del pack a Ushuaia siendo premium" {
    packAUshuaia.agregarActividad("Salto en cascada")
    packAUshuaia.agregarActividad("Conocer Pingus")
    packAUshuaia.agregarActividad("Faro fin del Mundo")
    packAUshuaia.agregarActividad("Conocer el Glaciar Vinciguerra")
    packAUshuaia.agregarBeneficio(beneficio1)
    packAUshuaia.agregarBeneficio(beneficio2)
    packAUshuaia.agregarBeneficio(beneficio3)
    assert.equals(packAUshuaia.valorFinal(),682500 )
    
  }
  test "El precio final a Msiones sin ser premium" {
    packMisiones.agregarActividad("Conocer Cataratas")
    packMisiones.agregarActividad("Lancha a garganta del diablo")
    packMisiones.agregarActividad("Conocer brasil")
    packMisiones.agregarBeneficio(beneficio4)
    packMisiones.agregarBeneficio(beneficio5)
    packMisiones.agregarBeneficio(beneficio6)
    assert.equals(packMisiones.valorFinal(),400000)
    
  }
}